{% extends "::base.html.twig" %}

{% block title %}Nous Contact{% endblock %}

{% block body %}
    <h1 style="color: #003366;">Nous Contacter</h1>
    <hr>

    <div class="col-lg-10">
        <form class="form-horizontal" action="{{ path('contact_admin') }}" method="POST" class="form-group">
            <div class="form-group">
                {{ form_label(form.objet, "Objet", {'label_attr': {'class': 'col-sm-2 control-label'}} ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.objet, {'attr': {'class': 'form-control'}} ) }}
                </div>
                {{ form_errors(form.objet) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-2 control-label'}} ) }}
                <div class="col-sm-10">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}} ) }}
                </div>
                {{ form_errors(form.message) }}
            </div>
            {{ form_widget(form.envoyer) }}
            <div style="display: none">
                {{ form_row(form) }}
            </div>
        </form>

        <hr>
    </div>





{% endblock %}
